<div class="container text-center">
  <h1>Edit <%=@venue.name%></h1>
  <hr>
  <div class="edit-form-width">
    <form action="/venues/<%=@venue.id%>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" class="form-control" id="name" value="<%=@venue.name%>">
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" name="address" class="form-control" id="address" value="<%=@venue.address%>">
      </div>
      <input class="btn btn-primary" type="submit" value="Update Venue">
    </form>
  </div>
  <p>
    <a class="btn btn-danger m-t-10" href="/venues/<%=@venue.id%>/delete">Delete Venue</a>
  </p>
  <p>
    <a class="btn btn-default" href="/venues">Back to Venues</a>
  </p>
</div>

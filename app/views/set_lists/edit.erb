<h1 class="text-center">Edit <%=@set_list.venue.name%> - <%@set_list.performance_date%></h1>

<form action="/set_lists/new/<%=@set_list.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="row">
    <!-- Create offset based on how many sets -->
    <% if @set_list.number_of_sets == 4 || @set_list.number_of_sets == 3 %>
      <div class="col-md-1"> </div>
    <% elsif @set_list.number_of_sets == 2 %>
      <div class="col-md-3"> </div>
    <% else %>
      <div class="col-md-4"> </div>
    <% end %>
    <% (1..@set_list.number_of_sets).each do |sets| %>
      <div class="col-md-2 panel panel-default">
        <h2 class="text-center">Set <%=sets%></h2>
        <% (1..@set_list.songs_per_set).each do |order| %>
          <select class="form-control" name="<%=sets%>,<%=order%>">
            <% @songs.each do |song| %>
              <option value="<%=song.id%>" <%= @set_items.where(order: order, sets: sets).first.song_id == song.id ? 'selected' : '' %>>
                <%=song.title%></option>
            <% end %>
          </select>
        <%end%>
      </div>
    <% end %>
  </div>
  <input type="submit" value="Update Set List">
</form>

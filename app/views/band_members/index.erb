<h1 class="text-center">Band Members</h1>
<hr>
<div class="container text-center">
  <div class="row">
    <div class="col-xs-6 text-center panel panel-default">
      <h4>All Band Members:</h4>
      <ul class="list-unstyled">
        <% @band_members.each do |member| %>
          <li><a href="/band_members/<%=member.id%>"><%=member.name%></a></li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-5 text-center">
      <h4>Get a new band mate? Add them here.</h4>
      <p>
        <a class="btn btn-primary" href="band_members/new">New Band Mate</a>
      </p>
      <p>
        <a class="btn btn-default m-t-45" href="/">Back to Main Menu</a>
      </p>
    </div>
  </div>
</div>

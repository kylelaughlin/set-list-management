<h1 class="text-center">New Band Member</h1>
<hr>

<% if @band_member.errors.any? %>
  <% @band_member.errors.full_messages.each do |m| %>
    <p class="error text-center">Errors: <%=m%></p>
  <% end %>
<% end %>

<div class="edit-form-width">
  <form action="/band_members" method="post">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="name" class="form-control" id="name">
    </div>
    <div class="form-group">
      <label for="instrument">Instruemnt(s)</label>
      <input type="text" name="instrument" class="form-control" id="instrument">
    </div>
    <input class="btn btn-primary" type="submit" value="Create Band Member">
  </form>
  <a class="btn btn-default m-t-10" href="/band_members">Cancel New Band Member</a>
</div>
